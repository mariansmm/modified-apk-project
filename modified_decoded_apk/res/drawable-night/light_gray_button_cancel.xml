<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="@integer/shortAnimationEnterDuration" android:exitFadeDuration="@integer/shortAnimationExitDuration"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bigGap" />
            <solid android:color="@color/gray_off_background_by_95" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bigGap" />
            <solid android:color="@color/gray_off_background_by_95" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bigGap" />
            <solid android:color="@color/gray_off_background_by_80" />
        </shape>
    </item>
</selector>