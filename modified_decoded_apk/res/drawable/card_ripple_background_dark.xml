<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="@integer/shortAnimationEnterDuration" android:exitFadeDuration="@integer/animationExitDuration"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/hugeGap" />
            <solid android:color="@color/gray_off_background_by_20" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/hugeGap" />
            <solid android:color="@color/gray_off_background_by_20" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/hugeGap" />
            <solid android:color="@color/gray_off_background_by_15" />
        </shape>
    </item>
</selector>