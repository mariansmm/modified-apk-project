<?xml version="1.0" encoding="utf-8"?>
<selector android:enterFadeDuration="@integer/shortAnimationEnterDuration" android:exitFadeDuration="@integer/shortAnimationExitDuration"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/gray_off_background_by_30" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/gray_off_background_by_20" />
        </shape>
    </item>
</selector>